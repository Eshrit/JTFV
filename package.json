{
  "name": "jtfv-billing",
  "version": "1.0.0",
  "description": "A desktop application for billing and barcode generation built with Angular, Express, and Electron.",
  "author": "Shailesh Shahu",
  "main": "main-electron.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production --base-href ./",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron --trace-warnings .",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder && exit 0"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.0.0",
    "@angular/cdk": "^16.0.4",
    "@angular/common": "^16.0.0",
    "@angular/compiler": "^16.0.0",
    "@angular/core": "^16.0.0",
    "@angular/forms": "^16.0.0",
    "@angular/material": "^16.2.14",
    "@angular/platform-browser": "^16.0.0",
    "@angular/platform-browser-dynamic": "^16.0.0",
    "@angular/router": "^16.0.0",
    "angular": "^1.6.10",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "html2canvas": "^1.4.1",
    "jsbarcode": "^3.11.6",
    "jspdf": "^3.0.1",
    "nodemailer": "^6.10.1",
    "rxjs": "~7.8.0",
    "sqlite3": "^5.1.7",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0",
    "bwip-js": "^4.6.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.0.5",
    "@angular/cli": "^16.2.16",
    "@angular/compiler-cli": "^16.0.0",
    "@types/jasmine": "~4.3.0",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "~5.0.2"
  },
  "build": {
    "appId": "com.jtfv.billing",
    "productName": "JTFV Billing App",
    "files": [
      "**/*",
      "!**/*.map",
      "!**/*.ts",
      "!angular.json",
      "!tsconfig.json",
      "!tslint.json",
      "!karma.conf.js",
      "!README.md",
      "!src"
    ],
    "asarUnpack": [
      "app_data/**"
    ],
    "extraResources": [
      {
        "from": "dist/my-login-app",
        "to": "app_data/dist/my-login-app"
      },
      {
        "from": "server.cjs",
        "to": "app_data/server.cjs"
      },
      {
        "from": "node_modules",
        "to": "app_data/node_modules"
      },
      {
        "from": "userdata/database.db",
        "to": "app_data/database.db"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/logo.ico",
      "uninstallerIcon": "assets/logo.ico"
    }
  }
}
